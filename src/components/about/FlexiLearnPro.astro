---
const timelineData = [
  {
    id: "phase-1",
    phase: "Phase 1: Initial Benchmarking",
    description:
      "Conducted extensive research and visits to Pangasinan State University (PSU) and Don Mariano Marcos Memorial State University (DMMMSU)...",
  },
  {
    id: "phase-2",
    phase: "Phase 2: Extended Research",
    description:
      "Expanded our study to include Central Luzon State University (CLSU) and Mariano Marcos State University (MMSU)...",
  },
  {
    id: "phase-3",
    phase: "Phase 3: Framework Development",
    description:
      "Synthesized findings to develop comprehensive frameworks for ETEEAP and future micro-credential offerings...",
  },
];

const outcomesData = [
  {
    id: "research-dev",
    title: "Research & Development",
    items: [
      "Development of research-based flexible learning frameworks",
      "Adoption of best practices...",
    ],
  },
  {
    id: "quality-innov",
    title: "Quality & Innovation",
    items: [
      "Enhanced program design methodologies",
      "Strengthened quality assurance processes",
    ],
  },
];
---

<!-- src/components/about/FlexiLearnPro.astro -->
<section
  id="flexilearnpro-section"
  class="py-12 md:py-20 px-4 md:px-8 bg-gradient-to-br from-white via-purple-50 to-white"
>
  <div id="flexilearnpro-container" class="mx-auto px-4 md:px-8 max-w-7xl">
    <h2
      id="flexilearnpro-title"
      class="text-4xl font-bold mb-8 text-center text-purple-800 motion-safe:animate-fadeInUp"
    >
      The FlexiLearnPro Initiative
    </h2>
    <p
      id="flexilearnpro-description"
      class="text-lg text-purple-900 leading-relaxed mb-6 text-center max-w-4xl mx-auto motion-safe:animate-fadeInUp"
    >
      FlexiLearnPro: Navigating Digital Learning Institutions is our
      comprehensive project aimed at developing robust frameworks for flexible
      learning...
    </p>

    <div
      id="flexilearnpro-timeline"
      class="relative mt-12 before:content-[''] before:absolute before:left-[10px] md:before:left-[20px] before:top-0 before:h-full before:w-0.5 before:bg-gradient-to-b before:from-purple-200 before:via-purple-400 before:to-purple-600"
    >
      {
        timelineData.map((item) => (
          <div
            id={`${item.id}-timeline-item`}
            class="relative mb-12 pl-8 md:pl-12 motion-safe:animate-slideRight"
          >
            <div
              id={`${item.id}-dot-wrapper`}
              class="absolute left-[2px] md:left-[10px] top-1 transform -translate-y-1/2 z-10"
            >
              <div
                id={`${item.id}-dot`}
                class="w-[18px] h-[18px] rounded-full bg-purple-600 border-4 border-white motion-safe:animate-pulse-custom"
              />
            </div>
            <div
              id={`${item.id}-content`}
              class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg hover:-translate-y-1 transition-all duration-300"
            >
              <h3
                id={`${item.id}-phase`}
                class="text-lg font-semibold text-purple-800 mb-2"
              >
                {item.phase}
              </h3>
              <p id={`${item.id}-description`} class="text-gray-600">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    <div
      id="flexilearnpro-outcomes"
      class="bg-gradient-to-br from-purple-50 to-white p-8 rounded-2xl border border-purple-100 my-8 transform hover:scale-[1.02] transition-all duration-300 mt-12 motion-safe:animate-scaleIn"
    >
      <h3
        id="outcomes-title"
        class="text-xl font-semibold mb-4 text-purple-950 text-center"
      >
        Key Outcomes
      </h3>
      <div id="outcomes-grid" class="grid md:grid-cols-2 gap-6">
        {
          outcomesData.map((outcome) => (
            <div
              id={`${outcome.id}-card`}
              class="bg-white p-8 rounded-xl shadow-lg transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 motion-safe:animate-fadeInUp"
            >
              <h4
                id={`${outcome.id}-card-title`}
                class="text-lg font-semibold text-purple-800 mb-3"
              >
                {outcome.title}
              </h4>
              <ul
                id={`${outcome.id}-list`}
                class="space-y-4 mt-6 list-disc pl-6"
              >
                {outcome.items.map((item, idx) => (
                  <li
                    id={`${outcome.id}-item-${idx}`}
                    class="text-gray-600 hover:text-purple-600 transition-colors duration-300"
                  >
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
