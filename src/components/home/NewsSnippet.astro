---
import Card from '../ui/Card.svelte'; 
import LinkButton from '../ui/LinkButton.svelte';

const latestNews = [
  { title: "New Micro-Credential Programs", content: "Explore our latest industry-aligned micro-credential programs.", link: "/news/micro-credentials-2025" },
  { title: "ETEEAP Success Stories", content: "Read about how our graduates transformed their careers.", link: "/news/eteeap-success-stories" },
  { title: "Industry Partnerships", content: "Learn about our new partnerships with leading companies.", link: "/news/industry-partnerships" }
];
// In future: const latestNews = await getLatestNews(3);
---
<section id="homepage-news-snippet" class="py-16 bg-gray-50">
  <div class="mx-auto max-w-6xl px-6 lg:px-8">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900">Latest Updates</h2>
      <LinkButton label="View All News" href="/news" />
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {latestNews.map((news) => (
        <Card 
          client:visible
          title={news.title}
          content={news.content}
          link={news.link}
        />
      ))}
    </div>
  </div>
</section>