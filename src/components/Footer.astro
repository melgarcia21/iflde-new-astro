---
const linkSections = [
  {
    title: "Links",
    items: [
      "College of Arts and Science",
      "Institute of Computer Studies",
      "College of Engineering",
      "Vocational Courses",
    ],
  },
  {
    title: "University",
    items: ["Official Website", "RTU FB Page", "IFLDE FB Page"],
  },
  {
    title: "Legal",
    items: ["Terms of service", "Privacy policy", "License"],
  },
];
---

<footer id="footer" class="bg-gray-900 text-gray-400 text-sm">
  <div class="border-t border-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-2 md:grid-cols-4 gap-10">
      <!-- Logo Section -->
      <div class="flex gap-3 items-center">
        <img
          src="/images/header/rtu-logo.png"
          alt="RTU Logo"
          class="h-12 w-12 md:h-16 md:w-16"
          width="100"
          height="100"
        />
        <img
          src="/images/header/iflde-logo.png"
          alt="Flexible Learning Icon"
          class="h-12 w-12 md:h-16 md:w-16"
          width="100"
          height="100"
        />
      </div>

      <!-- Dynamic Link Sections -->
      {linkSections.map((section) => (
        <div>
          <h4 class="text-white font-semibold mb-4">{section.title}</h4>
          <ul class="space-y-2">
            {section.items.map((item) => (
              <li>
                <a href="#" class="hover:text-gray-200 transition">{item}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Footer Bottom -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex flex-col md:flex-row items-center justify-between gap-4 border-t border-gray-800 pt-6">
      <p class="text-gray-500 text-center md:text-left">
        Â© 2025 Rizal Technological University. All rights reserved.
      </p>
      <p class="text-gray-500 text-center md:text-right">
        Designed & Developed by Mel Garcia.
      </p>

      <!-- Social Icons -->
      <div class="flex gap-4">
        <a
          href="https://www.facebook.com/rtuiflde"
          class="hover:text-white"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Facebook"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
              clip-rule="evenodd"
            />
          </svg>
        </a>

        <a href="#" class="hover:text-white" aria-label="YouTube">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
