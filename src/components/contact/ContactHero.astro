---
/* src\components\contact\ContactHero.astro */
import { MessageSquare, MapPin } from 'lucide-astro';

const people = [

  { name: 'Mrs. Faith Micah Abenes-Balbin', role: 'RTU-IFLDE Director', image: '/images/contact/mrs.faith.jpg' },
  { name: 'Ms. Zoe Thea Palisoc', role: 'Programs Dept. Asst. Director', image: '/images/contact/ms.zoe.jpg' },
  { name: 'Instr. Rancess S. Cuare', role: 'Digital Teaching Staff', image: '/images/contact/placeholder.png' },
  { name: 'Ms. Allynah A. Borre', role: 'Multimedia Office Staff', image: '/images/contact/placeholder.png' },
];
---

<section id="contact-hero-section" class="relative overflow-hidden bg-gradient-to-b from-purple-500 via-purple-700 to-purple-950 text-white">
  <div id="contact-staff" class="max-w-7xl mx-auto px-6 lg:px-8 py-8 sm:py-16 animate-fadeInUp">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-4xl font-bold tracking-tight text-purple-200 sm:text-5xl">Meet Our Dedicated Team</h2>
      <p class="mt-6 text-lg leading-8 text-purple-200">
        Our staff is committed to providing you with exceptional support and guidance. 
        <br/>
        Get to know the people behind IFLDE.
      </p>
    </div>
    
    <ul role="list" class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-4">
      {people.map((person, index) => (
        <li 
          class="group text-center animate-fadeInUp" 
          style={`animation-delay: ${index * 100}ms;`}
        >

          <div class="transition-all duration-300 rounded-xl">
            <img 
              src={person.image} 
              alt={`Profile picture of ${person.name}`}
              width="80" 
              height="80"
              loading="lazy"
              decoding="async"
              class="mx-auto size-20 rounded-full object-cover shadow-lg" 
            />
            <h3 class="mt-6 text-lg font-semibold tracking-tight text-purple-200 mask-b-from-40%">{person.name}</h3>
            <p class="text-base font-semibold text-purple-200 mask-b-from-40%">{person.role}</p>
          </div>
        </li>
      ))}
    </ul>
  </div>

  <div id="contact-hero" class="relative max-w-7xl mx-auto py-16 px-6 lg:px-8 text-center animate-fadeIn">
    <h2 class="text-4xl text-purple-100 md:text-5xl font-extrabold tracking-tight">
      We're Here to Help
    </h2>
    <p class="mt-6 max-w-2xl mx-auto text-lg text-purple-200">
      Have a question, feedback, or need support? Reach out to us through any of the channels below. We look forward to hearing from you.
    </p>
    <div class="mt-8 flex justify-center gap-6 md:gap-10">
      <a href="#contact-form-section" class="flex items-center gap-2 text-white hover:text-purple-300 transition-transform duration-200 hover:scale-105">
        <MessageSquare size={20} /> Form
      </a>
      <span class="text-purple-500">|</span>
      <a href="#faq-section" class="flex items-center gap-2 text-white hover:text-purple-300 transition-transform duration-200 hover:scale-105">
        <MapPin size={20} /> FAQ
      </a>
    </div>
  </div>
</section>